#!/bin/bash
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=24
#SBATCH --time=48:00:00
#SBATCH --mem-per-cpu=15G
#SBATCH --partition=ncpu
#SBATCH --array=1-2
#SBATCH --output=/flask/scratch/matthewsp/wuhu_rooting/pipeline_scripts/logs/single_%A_%a.log

source /nemo/lab/matthewsp/home/shared/cedric/utils/miniconda3/etc/profile.d/conda.sh
conda activate metagenomics

wkdir=/flask/scratch/matthewsp/wuhu_rooting

# Parse array input
#SLURM_ARRAY_TASK_ID=7
config_file=$wkdir/data/metadata/sra_metadata/filtered_sra_accessions.accessions_only.single.missing.csv
biosample=$(head -n $SLURM_ARRAY_TASK_ID $config_file|tail -n 1)
to_remove=$wkdir/data/metadata/sra_metadata/runs_to_remove.txt

echo BIOSAMPLE $biosample

basedir=$wkdir/results/pipeline_out.strict
fastq_dir=$basedir/sra_fastq_files
qced_dir=$basedir/qced_fastq
map_dir=$basedir/mapping_out
vcf_dir=$basedir/vcf_out
stats_dir=$basedir/stats_out
adapters=$wkdir/data/genomes/adapters.fa
human_ref=$wkdir/data/genomes/GCF_009914755.1_T2T-CHM13v2.0_genomic
ref=$wkdir/data/genomes/MN908947.3
ref_path=$ref.fna
n_threads=12

read_dir=$fastq_dir/$biosample
mkdir $read_dir

# Clean up temp files if script dies
function finish {
    rm -r $read_dir
    rm $in1_F 
    rm $out1_F
    rm $out2_F
    rm $out3_F
    rm $no_human_bam
}

trap finish EXIT INT TERM

# PAUSE IF DISK QUOTA HIT
test=$(df /flask/scratch/matthewsp|awk '{print $4}'|tail -n1|sed 's|[^.0-9]||g')

echo $test
while [[ $test < 1000000000 ]]
do
    echo $test left! Waiting for storage...
    sleep 30
    test=$(df /flask/scratch/matthewsp|awk '{print $4}'|tail -n1|sed 's|[^.0-9]||g')
done

# Download sra file
prefetch $biosample \
    --output-directory $read_dir \
    --max-size 200G

# Convert SRA to fastq
for run in $read_dir/*
do
    run_acc=$(echo $run|sed "s|$read_dir/||g")
    echo $run_acc

    fastq-dump \
        --outdir $read_dir \
        --skip-technical \
        $run/$run_acc.sra
done

# Remove dual layout runs
while read line
do
    rm -r $read_dir/$line
done < $to_remove

# Concatenate fastqs
in1_F=$read_dir/${biosample}.fastq

cat $read_dir/*.fastq > $in1_F

# Outputs
out1_F=$qced_dir/${biosample}.trimmed.fastq.gz

out2_F=$qced_dir/${biosample}.force_trimmed.fastq.gz

out3_F=$qced_dir/${biosample}.force_trimmed.QCed.fastq.gz

out4_F=$qced_dir/${biosample}.force_trimmed.QCed.no_human.fastq.gz

no_human_bam=$map_dir/$biosample.no_human_temp.bam
bam_out=$map_dir/$biosample.bam

map_report_out=$stats_dir/$biosample.idxstats.txt
cov_out=$stats_dir/$biosample.pileup.txt.gz
sum_out=$stats_dir/$biosample.coverage.txt
vcf_out=$vcf_dir/$biosample.bcftools.vcf.gz

# Adapter trimming
bbduk.sh \
  threads=$n_threads \
  in=$in1_F \
  out=$out1_F \
  ref=$adapters \
  tossbrokenreads=t \
  ktrim=r \
  k=23 \
  mink=11 \
  hdist=1 \
  ziplevel=2 \
  tpe

rm $in1_F 
rm -r $read_dir

# Force trim 25bp
bbduk.sh \
    threads=$n_threads \
    in=$out1_F \
    out=$out2_F \
    ftl=25

rm $out1_F

# Quality trim and filter
bbduk.sh \
    threads=$n_threads \
    in=$out2_F \
    out=$out3_F \
    maq=20 \
    qtrim=rl \
    trimq=20 \
    ziplevel=2

rm $out2_F 

## MAPPING ##
# Remove reads mapping to CHM13 human reference
bowtie2 \
  -x $human_ref \
  -U $out3_F \
  --seed 66 \
  --reorder \
  -p $n_threads | \
  samtools view -@ $n_threads -u -f4 -F256 -F2048 - | \
  samtools sort -@ $n_threads - -o $no_human_bam

rm $out3_F 

# Sorted BAM to fastq
samtools fastq -@ $n_threads $no_human_bam | gzip > $out4_F

echo no human:
samtools flagstat $no_human_bam

rm $no_human_bam

# Align reads to SC2 reference, filter, sort, and remove duplicates
bowtie2 \
  -x $ref \
  -U $out4_F \
  --no-unal \
  --seed 66 \
  --reorder \
  -p $n_threads | \
  samtools view -@ $n_threads -u -F256 -F2048 - | \
  samtools sort -@ $n_threads -u - | \
  samtools markdup -@ $n_threads -l 10000 -r - $bam_out

rm $out4_F 

echo final:
samtools flagstat $bam_out

# Index bam file for faster idxstat
samtools index -@ $n_threads $bam_out

# Get report
samtools idxstats $bam_out > $map_report_out

# Get per-position coverage
samtools mpileup $bam_out| awk '{print $1, $4}'|gzip > $cov_out

# Get coverage summary
samtools coverage $bam_out | awk '{if ($4 != 0) print}' > $sum_out

#### VARIANT CALLING ####
bcftools mpileup \
    -O u \
    -f $ref_path \
    -a FORMAT/AD,FORMAT/DP,INFO/AD \
    --max-depth 1000000000 \
    --min-MQ 30 \
    --min-BQ 30 \
    $bam_out | \
    bcftools call \
        -m \
        -O v \
        --keep-unseen-allele \
        --keep-alts \
        --ploidy 1 \
        -o $vcf_out
